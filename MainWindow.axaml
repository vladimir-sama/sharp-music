<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SharpMusicPlayer.MainWindow"
        Title="Sharp Music Player"
        Width="500" Height="600">

    <DockPanel LastChildFill="True" Margin="0">
        <!-- Currently playing at bottom -->
        <TextBlock x:Name="label_track"
                   DockPanel.Dock="Bottom"
                   Margin="5"
                   HorizontalAlignment="Center"
                   Text="(NA)"
                   FontWeight="Bold"
                   FontSize="14"/>

        <!-- Search/filter entry -->
        <TextBox x:Name="entry_filter"
                 DockPanel.Dock="Top"
                 Margin="5"
                 Watermark="Search or filter tracks..."
                 HorizontalAlignment="Stretch"/>

        <!-- Playlist selector -->
        <ComboBox x:Name="combo_playlists"
                  DockPanel.Dock="Top"
                  Margin="5"
                  HorizontalAlignment="Stretch"/>

        <!-- Track list fills remaining space -->
        <ListBox x:Name="list_tracks"
                 Margin="5"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"/>
    </DockPanel>
</Window>
