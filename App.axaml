<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SharpMusicPlayer.App">
    <Application.Styles>
        <SimpleTheme />
        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="Fira Code"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Background" Value="#0f0f0f"/>
            <Setter Property="BorderBrush" Value="#040404"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- ComboBox styling -->
        <Style Selector="ComboBox">
            <Setter Property="FontFamily" Value="Fira Code"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Background" Value="#0f0f0f"/>
            <Setter Property="BorderBrush" Value="#040404"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- ListBox styling -->
        <Style Selector="ListBox">
            <Setter Property="FontFamily" Value="Fira Code"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Background" Value="#0f0f0f"/>
            <Setter Property="BorderBrush" Value="#040404"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ListBoxItem styling -->
        <Style Selector="ListBoxItem">
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Hover and selection via pseudo-classes -->
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#121212"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#0ACF83"/>
            <Setter Property="Foreground" Value="#FFF"/>
        </Style>

        <!-- Current track TextBlock -->
        <Style Selector="TextBlock#label_track">
            <Setter Property="Foreground" Value="#0ACF83"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Application.Styles>
    
</Application>
